#!/usr/bin/env bash
# shellcheck disable=SC2154

# Don't run directly!
[[ "$0" == "${BASH_SOURCE[0]}" ]] && exit 255

# Sysctl
[[ "${_sysctl_enabled:-false}" == false ]] && return

echo "[M] $(basename "${BASH_SOURCE[0]%.msx}")"

# Config
IFS=$'\n'
echo "echo \"${_sysctl_flags[*]}\" >/private/etc/sysctl.conf" | sudo -s
unset IFS

# Set
for _flag in "${_sysctl_flags[@]}"
do
  sudo sysctl "$_flag"
done
