#!/usr/bin/env bash
# shellcheck disable=SC1090
# shellcheck disable=SC2034
# shellcheck disable=SC2154

# defaults
msx_module_enabled="${iterm_enabled:-false}"
msx_module_appcheck=(
  "/Applications/iTerm.app"
)

# module main function
msx_module_main()
{
  # Prefs From Custom Folder
  defaults write com.googlecode.iterm2 LoadPrefsFromCustomFolder -bool "${iterm_prefs_custom:-false}"
  defaults write com.googlecode.iterm2 PrefsCustomFolder -string "${iterm_prefs_custom_folder:-~/.iterm2}"
}
:
